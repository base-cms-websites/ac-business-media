import { warn } from "@parameter1/base-cms-utils";
import { get } from "@parameter1/base-cms-object-path";

$ const { config, site, GAM, req } = out.global;
$ const { page } = req.query;
$ const type = "search";
$ const title = "Search";
$ const description = `Search ${config.siteName()}`;

$ const showAlgoliaSearch = get(site, "config.algoliaSearch.enabled");

// Google Custom Site Search ID
$ const apiKey = site.get("gcse.id");

<marko-web-default-page-layout type=type title=title description=description>
  <@head>
    <marko-web-gtm-default-context|{ context }| type=type>
      <marko-web-gtm-push data=context />
    </marko-web-gtm-default-context>
  </@head>
  <@above-container>
    <refresh-theme-parsely-page headline=title />
  </@above-container>
  <@page>
    <marko-web-page-wrapper class="mb-block">
      <@section>
        <marko-web-gam-define-display-ad
          ...GAM.getAdUnit({ name: "lb1" })
          modifiers=["max-width-970", "center"]
        />
      </@section>

      <@section>
        <div class="row">
          <div class="col">
            <default-theme-breadcrumbs-with-home>
              <@item>${title}</@item>
            </default-theme-breadcrumbs-with-home>
            <h1 class="page-wrapper__title">
              ${description}
              <if(page)>
                &nbsp;- Page ${page}
              </if>
            </h1>
          </div>
        </div>
      </@section>

      <if(showAlgoliaSearch)>
        <@section>
          <marko-web-algolia-site-search-block />
        </@section>
      </if>
      <else>
        <@section>
          <div class="row">
            <div class="col">
              <default-theme-breadcrumbs-with-home>
                <@item>${title}</@item>
              </default-theme-breadcrumbs-with-home>
              <h1 class="page-wrapper__title">${description}</h1>
            </div>
          </div>
        </@section>
        <@section>
          <div class="row">
            <div class="col">
              <if(apiKey)>
                <marko-web-gcse-simple-search-box api-key=apiKey />
              </if>
              <else>
                $ warn("Unable to load GCSE search: no `gcse.id` value was configured.");
              </else>
            </div>
          </div>
        </@section>
      </else>
    </marko-web-page-wrapper>
  </@page>
</marko-web-default-page-layout>
